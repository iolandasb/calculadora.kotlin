<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TituloCalculadora">
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:layout_height">@dimen/height</item>
        <item name="android:text">@string/titulo</item>
        <item name="android:textColor">@color/textos</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CaixasHint">
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:layout_height">@dimen/height</item>
        <item name="android:textColor">@color/hints</item>
        <item name="android:textColorHint">@color/hints</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
    </style>

    <style name="Botoes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textos</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextoResultado">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/textos</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">15dp</item>
    </style>

</resources>